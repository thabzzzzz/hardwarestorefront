# Copy this file to .env and adjust values before running `docker compose up`.
# Do NOT commit your real `.env` with secrets.

# App / Workspace
APP_IMAGE=hardwarestore_app:latest
APP_CONTAINER_NAME=hw_app
WORKSPACE_CONTAINER_NAME=hw_workspace

# Database
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=homestead
DB_USERNAME=homestead
DB_PASSWORD=change_this_now
DB_CONTAINER_NAME=hw_db
POSTGRES_TAG=15

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# External ports
NGINX_HOST_PORT=8080

# Notes:
# - Replace DB_PASSWORD with a strong password before running on any shared machine.
# - For production, consider Docker secrets or a secrets manager instead of env vars.
